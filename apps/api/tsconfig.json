{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": "../../",
    "paths": {
      "@couple-app/*": ["packages/*/src"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules", 
    "dist",
    "../../packages/ui/**/*",
    "../../packages/app/**/*",
    "**/*.tsx"
  ]
}
